<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.MainActivity"
    android:orientation="vertical"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/home_bot_icon"
            app:tint="@color/main_green"
            tools:ignore="ContentDescription,HardcodedText" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/logo"
            android:paddingTop="0dp"
            android:layout_centerInParent="true"
            tools:ignore="ContentDescription"
            />

        <ImageView
            android:id="@+id/main_info"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/info"
            android:layout_alignParentRight="true"
            tools:ignore="ContentDescription,HardcodedText"
            app:tint="@color/main_green"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/main_image"
                        android:layout_width="350dp"
                        android:layout_height="250dp"
                        android:layout_centerInParent="true"
                        android:paddingBottom="60dp"
                        android:src="@drawable/main"
                        tools:ignore="ContentDescription,HardcodedText" />

                    <Button
                        android:id="@+id/plan_btn"
                        android:layout_width="300dp"
                        android:layout_height="50dp"
                        android:layout_alignBottom="@id/main_image"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="55dp"
                        android:background="@drawable/main_button"
                        android:drawableRight="@drawable/arrow_right"
                        android:fontFamily="@font/santralregular"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:text="@string/main_btn"
                        android:textAlignment="viewStart"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        tools:ignore="RtlCompat" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/destinations"
                        android:textColor="@color/main_green"
                        android:textSize="16sp"
                        android:fontFamily="@font/santralregular"/>

                    <TextView
                        android:id="@+id/destinations_btn2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/see_all"
                        android:textAlignment="viewEnd"
                        android:textColor="@color/main_green"
                        android:textSize="16sp"
                        android:fontFamily="@font/santrallight"
                        android:alpha="0.7"/>
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/appbar_scrolling_view_behavior">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="200dp"
                            android:layout_margin="10dp"
                            android:elevation="10dp"
                            app:cardBackgroundColor="@color/black">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/ankara"
                                    tools:ignore="ContentDescription" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="200dp"
                            android:layout_margin="10dp"
                            android:elevation="10dp"
                            app:cardBackgroundColor="@color/black">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/adana"
                                    tools:ignore="ContentDescription,HardcodedText" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="200dp"
                            android:layout_margin="10dp"
                            android:elevation="10dp"
                            app:cardBackgroundColor="@color/black">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/samsun"
                                    tools:ignore="ContentDescription,HardcodedText" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="200dp"
                            android:layout_margin="10dp"
                            android:elevation="10dp"
                            app:cardBackgroundColor="@color/black">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/mardin"
                                    tools:ignore="ContentDescription" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="200dp"
                            android:layout_margin="10dp"
                            android:elevation="10dp"
                            app:cardBackgroundColor="@color/black">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/gaziantep"
                                    tools:ignore="ContentDescription,HardcodedText" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="200dp"
                            android:layout_margin="10dp"
                            android:elevation="10dp"
                            app:cardBackgroundColor="@color/black">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="130dp"
                                    android:layout_height="200dp"
                                    android:src="@drawable/trabzon"
                                    tools:ignore="ContentDescription,HardcodedText" />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>


                    </LinearLayout>

                </HorizontalScrollView>








            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_menu_style"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/home_bot_icon"
                    app:tint="@color/white"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:textColor="@color/white"
                    android:fontFamily="@font/santralregular"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/destinations_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/loc_test"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/destinations"
                    android:textColor="@color/black"
                    android:fontFamily="@font/santralregular"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/planner_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/send_message" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/planner"
                    android:textColor="@color/black"
                    android:fontFamily="@font/santralregular"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/settings_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="26dp"
                    android:src="@drawable/setting_test"
                    tools:ignore="ContentDescription" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings"
                    android:textColor="@color/black"
                    android:fontFamily="@font/santralregular"
                    android:textSize="12sp"
                    />
            </LinearLayout>









        </LinearLayout>
    </RelativeLayout>

</LinearLayout>